<UserControl x:Class="OthelloMillenniumClient.PlayerCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OthelloMillenniumClient"
             mc:Ignorable="d" Height="586" Width="383"
             Background="#282828">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="#ffbe29"/>
        <Label Grid.Row="0" Content="{ Binding Pseudo }" FontFamily="Segoe UI Semibold" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Image Grid.Row="1" Source="{ Binding Image }" Margin="20"/>
        
        <Label Grid.Row="2" Content="{ Binding Time }" FontFamily="Segoe UI Semibold" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
