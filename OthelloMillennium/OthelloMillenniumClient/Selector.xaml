<UserControl x:Class="OthelloMillenniumClient.Selector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OthelloMillenniumClient"
             mc:Ignorable="d" 
             d:DesignHeight="160" d:DesignWidth="160">
    <Grid>
        <Polygon Grid.Row="1" Grid.Column="1" Points="0,-76 -51,0, 0,0" StrokeThickness="0" Fill="{ Binding Color }" Margin="9.75" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
        <Polygon Grid.Row="1" Grid.Column="1" Points="0,-60 -40.5,0, 0,0" StrokeThickness="1" Stroke="#ffbe29" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
        <Polygon Grid.Row="1" Grid.Column="1" Points="0,76 51,0, 0,0" StrokeThickness="0" Fill="{ Binding Color }" Margin="9.75" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Polygon Grid.Row="1" Grid.Column="1" Points="0,60 40.5,0, 0,0" StrokeThickness="1" Stroke="#ffbe29" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
