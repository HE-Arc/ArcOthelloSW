<Window x:Class="OthelloMillenniumClient.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OthelloMillenniumClient"
        mc:Ignorable="d"
        Title="Game" Height="800" Width="1000"
        Foreground="#f2b632"
        Background="#252839">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="166*"></ColumnDefinition>
            <ColumnDefinition Width="498*"></ColumnDefinition>
            <ColumnDefinition Width="138*"></ColumnDefinition>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <!--<Image Grid.Column="0" Grid.ColumnSpan="3" x:Name="Background" Source="Images/Background.png" Stretch="Fill"/>-->
        <!-- TODO Add gameboard grid -->

        <Rectangle HorizontalAlignment="Left" Height="286" Margin="-2,473,0,0" VerticalAlignment="Top" Width="190" Fill="#b5b5b7"/>
        <Rectangle HorizontalAlignment="Left" Height="281" Margin="-2,151,0,0" VerticalAlignment="Top" Width="190" Fill="#b5b5b7"/>
        <Rectangle HorizontalAlignment="Left" Height="112" Margin="-2,0,0,0" VerticalAlignment="Top" Width="984" Fill="#b5b5b7" Grid.ColumnSpan="4"></Rectangle>
        <Image x:Name="_as" Source="Images/Leia.png" Margin="-18,200,0,384"/>
        <Label Grid.Column="0" x:Name="label_Copy1" Content="Mearing" Foreground="#f2b632" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" HorizontalContentAlignment="Center" FontSize="24" Margin="-2,390,0,0" Height="42"/>
        <Label x:Name="label" Content="12" Foreground="#b5b5b7" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="158" HorizontalContentAlignment="Center" FontSize="18" Margin="40,0,0,437" Height="34"/>
        <Label x:Name="label_Copy2" Content="Ph0tonic" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" HorizontalContentAlignment="Center" FontSize="24" Margin="0,712,0,0" RenderTransformOrigin="0.5,0.5" Height="42">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.822"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>

        <local:Gameboard Margin="91,194,10,10" Grid.ColumnSpan="3" Grid.Column="1"/>
        <Image x:Name="tes_Copy" Source="Images/Finn.png" Margin="-2,542,12,54"/>
        <Rectangle HorizontalAlignment="Left" Height="156" Margin="6,610,0,0" VerticalAlignment="Top" Width="66" Fill="#b5b5b7" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="450" Margin="10,152,0,0" VerticalAlignment="Top" Width="66" Fill="#60b5b5b7" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Label x:Name="label_Copy3" Content="Ph0tonic" HorizontalAlignment="Left" VerticalAlignment="Top" Width="181" HorizontalContentAlignment="Center" FontSize="24" Margin="1,494,0,0" RenderTransformOrigin="0.5,0.5" Height="42">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.822"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="label_Copy4" Content="Ph0tonic" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" HorizontalContentAlignment="Center" FontSize="24" Margin="3,157,0,0" RenderTransformOrigin="0.5,0.5" Height="42">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.822"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>

    </Grid>
</Window>
