        <Button Grid.Row="1" Grid.Column="7" Content="1"></Button>
        <Button Grid.Row="1" Grid.Column="8" Content="1"></Button>
        <Button Grid.Row="1" Grid.Column="9">
            <Button.Content>
                <Rectangle Stretch="UniformToFill">
                    <Rectangle.Fill>
                        <RadialGradientBrush 
                          GradientOrigin="0.5,0.5" Center="0.5,0.5" 
                          RadiusX="0.5" RadiusY="0.5">
                            <GradientStop Color="Blue" Offset="0.75" />
                            <GradientStop Color="LightBlue" Offset="0.75" />
                            <GradientStop Color="#000f3d56" Offset="1" />
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </Button.Content>
