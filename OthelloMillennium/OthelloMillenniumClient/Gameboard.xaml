        <Button Grid.Row="4" Grid.Column="3"></Button>
        <Button Grid.Row="4" Grid.Column="4">
            <Button.Content>
                <Rectangle Style="{ StaticResource black-square }"></Rectangle>
            </Button.Content>
        </Button>
        <Button Grid.Row="4" Grid.Column="5" Style="{ StaticResource cell }">
            <Button.Content>
                <Rectangle Style="{ StaticResource white-square }"></Rectangle>
            </Button.Content></Button>
        <Button Grid.Row="4" Grid.Column="6"></Button>
        <Button Grid.Row="4" Grid.Column="7"></Button>
        <Button Grid.Row="4" Grid.Column="8"></Button>
        <Button Grid.Row="4" Grid.Column="9"></Button>
        <Button Grid.Row="5" Grid.Column="0"></Button>
        <Button Grid.Row="5" Grid.Column="1"></Button>
        <Button Grid.Row="5" Grid.Column="2"></Button>
        <Button Grid.Row="5" Grid.Column="3"></Button>
